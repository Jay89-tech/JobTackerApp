@model SkillsManagement.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skills Management</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <div class="icon">💼</div>
            <h1>Skills Management System</h1>
            <p>Empower your workforce with comprehensive skills tracking and development management.</p>
        </div>

        <div class="login-right">
            <div class="login-header">
                <h2>HR Admin Login</h2>
                <p>Sign in to access the admin dashboard</p>
            </div>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" placeholder="admin@company.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" placeholder="Enter your password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" />
                    <label asp-for="RememberMe">Remember me</label>
                </div>

                <button type="submit" class="btn-login">Sign In</button>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>