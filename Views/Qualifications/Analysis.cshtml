@{
    ViewData["Title"] = "Qualifications Analysis";
}


@section Styles {
    <link rel="stylesheet" href="~/css/analysis.css" />
}

<div class="page-header mb-4">
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary mb-2">
            <i class="fas fa-arrow-left"></i> Back to Qualifications
        </a>
        <h2>Qualifications Analysis & Insights</h2>
        <p class="text-muted">Comprehensive analysis of employee qualifications and trends - Generated @DateTime.Now.ToString("MMMM dd, yyyy")</p>
    </div>
    <div class="header-actions">
        <button onclick="window.print()" class="btn btn-outline-primary">
            <i class="fas fa-print"></i> Print Report
        </button>
    </div>
</div>

<!-- Key Metrics Row -->
<div class="row metrics-row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="metric-card metric-purple">
            <div class="metric-icon">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <div class="metric-content">
                <h3>@ViewBag.TotalQualifications</h3>
                <p>Total Qualifications</p>
                <div class="metric-footer">
                    <span class="trend-indicator positive">
                        <i class="fas fa-arrow-up"></i> Active records
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="metric-card metric-blue">
            <div class="metric-icon">
                <i class="fas fa-university"></i>
            </div>
            <div class="metric-content">
                <h3>@ViewBag.UniqueInstitutions</h3>
                <p>Educational Institutions</p>
                <div class="metric-footer">
                    <span class="trend-indicator">
                        <i class="fas fa-building"></i> Unique partners
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="metric-card metric-green">
            <div class="metric-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <div class="metric-content">
                <h3>@((List<dynamic>)ViewBag.EmployeesWithMostQuals).Count</h3>
                <p>Qualified Employees</p>
                <div class="metric-footer">
                    <span class="trend-indicator positive">
                        <i class="fas fa-check-circle"></i> With certifications
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="metric-card metric-orange">
            <div class="metric-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="metric-content">
                <h3>@((List<dynamic>)ViewBag.EmployeesWithoutQuals).Count</h3>
                <p>Without Qualifications</p>
                <div class="metric-footer">
                    <span class="trend-indicator @(((List<dynamic>)ViewBag.EmployeesWithoutQuals).Count > 0 ? "negative" : "positive")">
                        <i class="fas @(((List<dynamic>)ViewBag.EmployeesWithoutQuals).Count > 0 ? "fa-exclamation" : "fa-check")"></i>
                        @(((List<dynamic>)ViewBag.EmployeesWithoutQuals).Count > 0 ? "Needs attention" : "All qualified")
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="row mb-4">
    <!-- Top Institutions Chart -->
    <div class="col-lg-6 mb-4">
        <div class="card chart-card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-trophy"></i> Top 10 Educational Institutions</h5>
                    <span class="badge bg-primary">By Volume</span>
                </div>
            </div>
            <div class="card-body">
                <canvas id="institutionsChart"></canvas>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <i class="fas fa-info-circle"></i> Institutions with most qualifications issued
                </small>
            </div>
        </div>
    </div>

    <!-- Qualifications by Year Chart -->
    <div class="col-lg-6 mb-4">
        <div class="card chart-card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-chart-line"></i> Qualifications Timeline</h5>
                    <span class="badge bg-success">Historical Trend</span>
                </div>
            </div>
            <div class="card-body">
                <canvas id="yearChart"></canvas>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <i class="fas fa-info-circle"></i> Number of qualifications completed per year
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Most Common Qualifications -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card qualifications-card">
            <div class="card-header">
                <h5><i class="fas fa-medal"></i> Most Common Qualifications</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.TopQualifications != null && ((Dictionary<string, int>)ViewBag.TopQualifications).Any())
                {
                    <div class="qualifications-grid">
                        @{
                            var topQuals = (Dictionary<string, int>)ViewBag.TopQualifications;
                            var maxCount = topQuals.Values.Max();
                        }
                        @foreach (var qual in topQuals)
                        {
                            var percentage = (qual.Value * 100.0 / maxCount);
                            <div class="qual-item">
                                <div class="qual-header">
                                    <div class="qual-badge">
                                        <i class="fas fa-certificate"></i>
                                    </div>
                                    <div class="qual-info">
                                        <h6>@qual.Key</h6>
                                        <span class="qual-stats">@qual.Value employee@(qual.Value != 1 ? "s" : "") qualified</span>
                                    </div>
                                    <div class="qual-count">
                                        <span class="count-badge">@qual.Value</span>
                                    </div>
                                </div>
                                <div class="qual-progress">
                                    <div class="progress-bar" style="width: @percentage%"></div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No qualification data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Two Column Analysis -->
<div class="row">
    <!-- Top Qualified Employees -->
    <div class="col-lg-6 mb-4">
        <div class="card leaderboard-card">
            <div class="card-header">
                <h5><i class="fas fa-star"></i> Top Qualified Employees</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.EmployeesWithMostQuals != null && ((List<SkillsManagement.Controllers.EmployeeQualificationCount>)ViewBag.EmployeesWithMostQuals).Any())
                {
                    <div class="leaderboard-list">
                        @{
                            var employees = (List<SkillsManagement.Controllers.EmployeeQualificationCount>)ViewBag.EmployeesWithMostQuals;
                            var rank = 0;
                        }
                        @foreach (var emp in employees)
                        {
                            rank++;
                            var medalClass = rank == 1 ? "gold" : rank == 2 ? "silver" : rank == 3 ? "bronze" : "default";
                            var medalIcon = rank <= 3 ? "fa-medal" : "fa-certificate";

                            <div class="leaderboard-item">
                                <div class="rank-badge rank-@medalClass">
                                    <i class="fas @medalIcon"></i>
                                    <span>@rank</span>
                                </div>
                                <div class="employee-avatar">
                                    @emp.EmployeeName.Substring(0, 1)
                                </div>
                                <div class="employee-details">
                                    <strong>@emp.EmployeeName</strong>
                                    <small>@emp.Count qualification@(emp.Count != 1 ? "s" : "")</small>
                                </div>
                                <div class="employee-actions">
                                    <a asp-action="ByEmployee" asp-route-employeeId="@emp.EmployeeId" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users-slash fa-2x text-muted mb-3"></i>
                        <p class="text-muted">No employee data available</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Employees Without Qualifications -->
    <div class="col-lg-6 mb-4">
        <div class="card alert-card">
            <div class="card-header bg-warning-subtle">
                <h5><i class="fas fa-exclamation-triangle"></i> Employees Without Qualifications</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.EmployeesWithoutQuals != null && ((List<dynamic>)ViewBag.EmployeesWithoutQuals).Any())
                {
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-info-circle"></i>
                        <strong>Action Required:</strong> These active employees haven't added any qualifications yet. Consider reaching out to encourage profile completion.
                    </div>
                    <div class="employees-list">
                        @foreach (var emp in (List<dynamic>)ViewBag.EmployeesWithoutQuals)
                        {
                            <div class="employee-item-simple">
                                <div class="employee-avatar">
                                    @emp.FullName.Substring(0, 1)
                                </div>
                                <div class="employee-info">
                                    <strong>@emp.FullName</strong>
                                    <small>@emp.Department</small>
                                </div>
                                <div class="employee-actions">
                                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-user"></i> Profile
                                    </a>
                                </div>
                            </div>
                        }
                    </div>

                    @if (((List<dynamic>)ViewBag.EmployeesWithoutQuals).Count > 10)
                    {
                        <div class="text-center mt-3">
                            <a asp-controller="Employees" asp-action="Index" class="btn btn-sm btn-warning">
                                View All Employees <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="success-state">
                        <div class="success-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h5>Excellent!</h5>
                        <p class="text-success mb-0">All active employees have added qualifications to their profiles.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Institution Distribution Doughnut Chart -->
<div class="row mb-4">
    <div class="col-lg-8 mx-auto">
        <div class="card chart-card">
            <div class="card-header">
                <h5><i class="fas fa-chart-pie"></i> Institution Distribution Overview</h5>
            </div>
            <div class="card-body">
                <canvas id="institutionDoughnutChart" style="max-height: 400px;"></canvas>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <i class="fas fa-info-circle"></i> Distribution of qualifications across all institutions
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Export Section -->
<div class="card export-card">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5><i class="fas fa-download"></i> Export Analysis Report</h5>
                <p class="mb-0 text-muted">Download this analysis in various formats for reporting and presentations</p>
            </div>
            <div class="col-md-4 text-end">
                <button class="btn btn-success me-2" onclick="window.print()">
                    <i class="fas fa-file-pdf"></i> Export PDF
                </button>
                <button class="btn btn-primary" onclick="exportToExcel()">
                    <i class="fas fa-file-excel"></i> Export Excel
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart.js default settings
        Chart.defaults.font.family = '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif';
        Chart.defaults.color = '#666';

        // Top Institutions Horizontal Bar Chart
        const institutionsData = @Html.Raw(Json.Serialize(ViewBag.TopInstitutions ?? new Dictionary<string, int>()));
        const institutionsLabels = Object.keys(institutionsData);
        const institutionsValues = Object.values(institutionsData);

        const institutionsCtx = document.getElementById('institutionsChart').getContext('2d');
        new Chart(institutionsCtx, {
            type: 'bar',
            data: {
                labels: institutionsLabels,
                datasets: [{
                    label: 'Qualifications',
                    data: institutionsValues,
                    backgroundColor: [
                        'rgba(102, 126, 234, 0.9)',
                        'rgba(118, 75, 162, 0.9)',
                        'rgba(74, 144, 226, 0.9)',
                        'rgba(75, 192, 192, 0.9)',
                        'rgba(255, 159, 64, 0.9)',
                        'rgba(153, 102, 255, 0.9)',
                        'rgba(255, 99, 132, 0.9)',
                        'rgba(54, 162, 235, 0.9)',
                        'rgba(255, 206, 86, 0.9)',
                        'rgba(75, 192, 192, 0.9)'
                    ],
                    borderColor: 'rgba(255, 255, 255, 1)',
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        borderRadius: 8,
                        callbacks: {
                            label: function(context) {
                                return 'Qualifications: ' + context.parsed.x;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    y: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Qualifications by Year Line Chart
        const yearData = @Html.Raw(Json.Serialize(ViewBag.QualificationsByYear ?? new Dictionary<string, int>()));
        const yearLabels = Object.keys(yearData);
        const yearValues = Object.values(yearData);

        const yearCtx = document.getElementById('yearChart').getContext('2d');
        const yearChart = new Chart(yearCtx, {
            type: 'line',
            data: {
                labels: yearLabels,
                datasets: [{
                    label: 'Qualifications Completed',
                    data: yearValues,
                    borderColor: '#667eea',
                    backgroundColor: function(context) {
                        const chart = context.chart;
                        const {ctx, chartArea} = chart;
                        if (!chartArea) return null;
                        const gradient = ctx.createLinearGradient(0, chartArea.bottom, 0, chartArea.top);
                        gradient.addColorStop(0, 'rgba(102, 126, 234, 0.0)');
                        gradient.addColorStop(1, 'rgba(102, 126, 234, 0.4)');
                        return gradient;
                    },
                    tension: 0.4,
                    fill: true,
                    borderWidth: 3,
                    pointRadius: 6,
                    pointHoverRadius: 8,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#667eea',
                    pointBorderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        borderRadius: 8,
                        callbacks: {
                            title: function(context) {
                                return 'Year ' + context[0].label;
                            },
                            label: function(context) {
                                return 'Completed: ' + context.parsed.y + ' qualification' + (context.parsed.y !== 1 ? 's' : '');
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Institution Distribution Doughnut Chart
        const doughnutCtx = document.getElementById('institutionDoughnutChart').getContext('2d');
        new Chart(doughnutCtx, {
            type: 'doughnut',
            data: {
                labels: institutionsLabels,
                datasets: [{
                    data: institutionsValues,
                    backgroundColor: [
                        '#667eea',
                        '#764ba2',
                        '#4facfe',
                        '#43e97b',
                        '#fa709a',
                        '#fee140',
                        '#30cfd0',
                        '#f093fb',
                        '#fccb90',
                        '#d57eeb'
                    ],
                    borderWidth: 3,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            padding: 15,
                            font: {
                                size: 12
                            },
                            generateLabels: function(chart) {
                                const data = chart.data;
                                if (data.labels.length && data.datasets.length) {
                                    return data.labels.map((label, i) => {
                                        const value = data.datasets[0].data[i];
                                        const total = data.datasets[0].data.reduce((a, b) => a + b, 0);
                                        const percentage = ((value / total) * 100).toFixed(1);
                                        return {
                                            text: `${label} (${percentage}%)`,
                                            fillStyle: data.datasets[0].backgroundColor[i],
                                            hidden: false,
                                            index: i
                                        };
                                    });
                                }
                                return [];
                            }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        borderRadius: 8,
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.parsed;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((value / total) * 100).toFixed(1);
                                return `${label}: ${value} (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });

        // Export to Excel function
        function exportToExcel() {
            alert('Excel export functionality would be implemented here. This would generate an Excel file with all the analysis data.');
            // Implement actual Excel export using a library like ExcelJS or similar
        }

        // Print styles
        window.addEventListener('beforeprint', () => {
            document.body.classList.add('printing');
        });

        window.addEventListener('afterprint', () => {
            document.body.classList.remove('printing');
        });
    </script>
}

