@model List<Qualification>
@{
    ViewData["Title"] = "Employee Qualifications";
    var employee = ViewBag.Employee as SkillsManagement.Models.Employee;
}

@section Styles {
    <link rel="stylesheet" href="~/css/qualbyemp.css" />
}

<div class="page-header mb-4">
    <div>
        <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee?.Id" class="btn btn-outline-secondary mb-2">
            <i class="fas fa-arrow-left"></i> Back to Employee Profile
        </a>
        <h2>Qualifications - @employee?.FullName</h2>
        <p class="text-muted">@employee?.Department | @employee?.Role</p>
    </div>
    <div class="header-actions">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-list"></i> All Qualifications
        </a>
    </div>
</div>

<!-- Employee Info Card -->
<div class="card employee-info-card mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div class="employee-avatar-large me-3">
                @employee?.FullName.Substring(0, 1)
            </div>
            <div class="flex-grow-1">
                <h4 class="mb-1">@employee?.FullName</h4>
                <p class="text-muted mb-0">
                    <i class="fas fa-building"></i> @employee?.Department
                    <span class="mx-2">|</span>
                    <i class="fas fa-briefcase"></i> @employee?.Role
                    <span class="mx-2">|</span>
                    <i class="fas fa-envelope"></i> @employee?.Email
                </p>
            </div>
            <div class="stats-summary">
                <div class="stat-item">
                    <h3>@Model.Count</h3>
                    <p>Total Qualifications</p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <!-- Qualifications Timeline -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-graduation-cap"></i> Qualifications Timeline</h5>
        </div>
        <div class="card-body">
            <div class="qualifications-timeline">
                @foreach (var qual in Model.OrderByDescending(q => q.CompletionDate))
                {
                    var yearsAgo = (DateTime.Now - qual.CompletionDate).Days / 365;
                    var isRecent = yearsAgo <= 1;

                    <div class="timeline-item">
                        <div class="timeline-marker @(isRecent ? "recent" : "")">
                            <i class="fas fa-certificate"></i>
                        </div>
                        <div class="timeline-content">
                            <div class="timeline-header">
                                <div>
                                    <h5 class="qualification-title">@qual.Title</h5>
                                    <p class="institution-name">
                                        <i class="fas fa-university"></i> @qual.Institution
                                    </p>
                                </div>
                                <div class="timeline-date">
                                    <span class="date-badge">
                                        @qual.CompletionDate.ToString("MMM yyyy")
                                    </span>
                                    @if (isRecent)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-star"></i> Recent
                                        </span>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(qual.Description))
                            {
                                <div class="qualification-description">
                                    <p>@qual.Description</p>
                                </div>
                            }

                            <div class="qualification-meta">
                                <span class="meta-item">
                                    <i class="fas fa-calendar-check"></i>
                                    Completed @qual.CompletionDate.ToString("MMMM dd, yyyy")
                                </span>
                                <span class="meta-item">
                                    <i class="fas fa-clock"></i>
                                    @yearsAgo year@(yearsAgo != 1 ? "s" : "") ago
                                </span>
                                <span class="meta-item">
                                    <i class="fas fa-plus-circle"></i>
                                    Added @qual.CreatedDate.ToString("MMM dd, yyyy")
                                </span>
                            </div>

                            <div class="qualification-actions">
                                <a asp-action="Details" asp-route-id="@qual.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <form asp-action="Delete" asp-route-id="@qual.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this qualification?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Summary Statistics -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card stats-card">
                <div class="card-body text-center">
                    <i class="fas fa-university fa-3x text-primary mb-3"></i>
                    <h3>@Model.Select(q => q.Institution).Distinct().Count()</h3>
                    <p class="text-muted mb-0">Educational Institutions</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stats-card">
                <div class="card-body text-center">
                    <i class="fas fa-star fa-3x text-warning mb-3"></i>
                    <h3>@Model.Count(q => (DateTime.Now - q.CompletionDate).Days / 365 <= 1)</h3>
                    <p class="text-muted mb-0">Recent (Last Year)</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stats-card">
                <div class="card-body text-center">
                    <i class="fas fa-graduation-cap fa-3x text-success mb-3"></i>
                    <h3>@Model.Count</h3>
                    <p class="text-muted mb-0">Total Qualifications</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Institutions -->
    <div class="card mt-4">
        <div class="card-header">
            <h5><i class="fas fa-trophy"></i> Most Attended Institutions</h5>
        </div>
        <div class="card-body">
            @{
                var topInstitutions = Model
                .GroupBy(q => q.Institution)
                .Select(g => new { Institution = g.Key, Count = g.Count() })
                .OrderByDescending(i => i.Count)
                .Take(5);
            }
            <div class="institutions-list">
                @foreach (var inst in topInstitutions)
                {
                    <div class="institution-item">
                        <div class="institution-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="institution-info">
                            <strong>@inst.Institution</strong>
                            <small class="text-muted">@inst.Count qualification@(inst.Count != 1 ? "s" : "")</small>
                        </div>
                        <div class="institution-badge">
                            <span class="badge bg-primary">@inst.Count</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <!-- Empty State -->
    <div class="card">
        <div class="card-body">
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h4>No Qualifications Yet</h4>
                <p class="text-muted mb-4">
                    @employee?.FullName hasn't added any qualifications to their profile yet.
                    Employees can add qualifications through the mobile app.
                </p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>Note:</strong> Qualifications are added by employees through their mobile app.
                    As an HR admin, you can view and delete qualifications, but additions should be made by the employee.
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Animate timeline items on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const timelineItems = document.querySelectorAll('.timeline-item');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-in');
                    }
                });
            }, { threshold: 0.1 });

            timelineItems.forEach(item => {
                observer.observe(item);
            });
        });
    </script>
}