
@using SkillsManagement.Models
@model List<Skill>
@{
    ViewData["Title"] = "Skills Overview";
}

@section Styles {
    <link rel="stylesheet" href="~/css/skillindex.css" />
}

<div class="page-header">
    <div>
        <h2>Skills Overview</h2>
        <p class="text-muted">Comprehensive view of all employee skills</p>
    </div>
    <div class="header-actions">
        <a asp-action="Analysis" class="btn btn-info">
            <i class="fas fa-chart-line"></i> Analysis
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card filter-card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Category</label>
                    <select name="category" class="form-select">
                        <option value="">All Categories</option>
                        <option value="Technical" selected="@(ViewBag.SelectedCategory == "Technical")">Technical</option>
                        <option value="Soft" selected="@(ViewBag.SelectedCategory == "Soft")">Soft Skills</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Proficiency Level</label>
                    <select name="proficiency" class="form-select">
                        <option value="">All Levels</option>
                        <option value="1" selected="@(ViewBag.SelectedProficiency == 1)">Level 1 - Beginner</option>
                        <option value="2" selected="@(ViewBag.SelectedProficiency == 2)">Level 2 - Elementary</option>
                        <option value="3" selected="@(ViewBag.SelectedProficiency == 3)">Level 3 - Intermediate</option>
                        <option value="4" selected="@(ViewBag.SelectedProficiency == 4)">Level 4 - Advanced</option>
                        <option value="5" selected="@(ViewBag.SelectedProficiency == 5)">Level 5 - Expert</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-lightbulb stat-icon"></i>
            <div>
                <h4>@Model.Count</h4>
                <p>Total Skills</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-laptop-code stat-icon text-info"></i>
            <div>
                <h4>@Model.Count(s => s.Category == "Technical")</h4>
                <p>Technical</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-users stat-icon text-success"></i>
            <div>
                <h4>@Model.Count(s => s.Category == "Soft")</h4>
                <p>Soft Skills</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-star stat-icon text-warning"></i>
            <div>
                <h4>@(Model.Any() ? Model.Average(s => s.ProficiencyLevel).ToString("F1") : "0")</h4>
                <p>Avg Proficiency</p>
            </div>
        </div>
    </div>
</div>

<!-- Grouped Skills -->
@if (ViewBag.GroupedSkills != null && ((List<GroupedSkillViewModel>)ViewBag.GroupedSkills).Any())
{
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-layer-group"></i> Skills Grouped by Name</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Skill Name</th>
                            <th>Category</th>
                            <th class="text-center">Employees</th>
                            <th class="text-center">Avg Proficiency</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var skill in (List<GroupedSkillViewModel>)ViewBag.GroupedSkills)
                        {
                            <tr>
                                <td><strong>@skill.SkillName</strong></td>
                                <td>
                                    @if (skill.Category == "Technical")
                                    {
                                        <span class="badge bg-info">Technical</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Soft Skill</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge-count">@skill.Count</span>
                                </td>
                                <td class="text-center">
                                    <div class="proficiency-badge proficiency-@(((int)skill.AverageProficiency))">
                                        @skill.AverageProficiency.ToString("F1")
                                    </div>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-outline-info" onclick="showEmployees(@Html.Raw(Json.Serialize(skill.Employees)), '@skill.SkillName')">
                                        <i class="fas fa-users"></i> View Employees
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="text-center py-5">
                <i class="fas fa-lightbulb fa-3x text-muted mb-3"></i>
                <p class="text-muted">No skills found matching your criteria.</p>
            </div>
        </div>
    </div>
}

<!-- Employees Modal -->
<div class="modal fade" id="employeesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Employees with Skill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="employeesList"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showEmployees(employeeIds, skillName) {
            document.getElementById('modalTitle').textContent = 'Employees with: ' + skillName;

            let html = '<ul class="list-group">';
            employeeIds.forEach(id => {
                html += '<li class="list-group-item">' +
                       '<a href="/Employees/Details/' + id + '" class="text-decoration-none">' +
                       'View Employee Profile <i class="fas fa-external-link-alt ms-2"></i>' +
                       '</a></li>';
            });
            html += '</ul>';

            document.getElementById('employeesList').innerHTML = html;

            var modal = new bootstrap.Modal(document.getElementById('employeesModal'));
            modal.show();
        }
    </script>
}