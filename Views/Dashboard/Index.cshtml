@model SkillsManagement.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
}

<div class="dashboard-header">
    <div>
        <h1>Welcome back, @Model.CurrentUser?.FullName</h1>
        <p class="text-muted">Here's what's happening with your workforce today</p>
    </div>
    <div class="header-actions">
        <span class="badge badge-primary">@DateTime.Now.ToString("MMMM dd, yyyy")</span>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row stats-row">
    <div class="col-md-3">
        <div class="stat-card stat-card-blue">
            <div class="stat-icon">👥</div>
            <div class="stat-content">
                <h3>@Model.TotalEmployees</h3>
                <p>Total Employees</p>
                <small>@Model.ActiveEmployees Active | @Model.InactiveEmployees Inactive</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card stat-card-green">
            <div class="stat-icon">🎯</div>
            <div class="stat-content">
                <h3>@Model.TotalSkills</h3>
                <p>Total Skills</p>
                <small>Across all employees</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card stat-card-purple">
            <div class="stat-icon">🎓</div>
            <div class="stat-content">
                <h3>@Model.TotalQualifications</h3>
                <p>Qualifications</p>
                <small>Employee certifications</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card stat-card-orange">
            <div class="stat-icon">📚</div>
            <div class="stat-content">
                <h3>@Model.TotalTrainings</h3>
                <p>Training Programs</p>
                <small>@Model.CompletedTrainings Completed | @Model.PlannedTrainings Planned</small>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card chart-card">
            <div class="card-header">
                <h5>Skills Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="skillsChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card chart-card">
            <div class="card-header">
                <h5>Department Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="departmentChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card activity-card">
            <div class="card-header">
                <h5>Recent Activity</h5>
                <a asp-controller="AuditLogs" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                {
                    <div class="activity-list">
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="activity-item">
                                <div class="activity-icon">
                                    @switch (activity.Action.ToLower())
                                    {
                                        case "login":
                                            <span>🔐</span>
                                            break;
                                        case "create":
                                            <span>➕</span>
                                            break;
                                        case "update":
                                            <span>✏️</span>
                                            break;
                                        case "delete":
                                            <span>🗑️</span>
                                            break;
                                        default:
                                            <span>📝</span>
                                            break;
                                    }
                                </div>
                                <div class="activity-content">
                                    <p class="activity-text">
                                        <strong>@activity.EmployeeName</strong> @activity.Action.ToLower()d @activity.Module
                                    </p>
                                    <small class="activity-time">@activity.Timestamp.ToString("MMM dd, yyyy hh:mm tt")</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No recent activities</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card quick-actions-card">
            <div class="card-body">
                <h5 class="mb-4">Quick Actions</h5>
                <div class="quick-actions">
                    <a asp-controller="Employees" asp-action="Create" class="quick-action-btn">
                        <span class="action-icon">👤</span>
                        <span>Add Employee</span>
                    </a>
                    <a asp-controller="Employees" asp-action="Index" class="quick-action-btn">
                        <span class="action-icon">📋</span>
                        <span>Manage Employees</span>
                    </a>
                    <a asp-controller="Reports" asp-action="SkillAudit" class="quick-action-btn">
                        <span class="action-icon">📊</span>
                        <span>Skill Reports</span>
                    </a>
                    <a asp-controller="Training" asp-action="Suggestions" class="quick-action-btn">
                        <span class="action-icon">💡</span>
                        <span>Suggest Training</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Skills Distribution Chart
        const skillsData = @Html.Raw(Json.Serialize(Model.SkillDistribution ?? new Dictionary<string, int>()));
        const skillsLabels = Object.keys(skillsData);
        const skillsValues = Object.values(skillsData);

        const skillsCtx = document.getElementById('skillsChart').getContext('2d');
        new Chart(skillsCtx, {
            type: 'doughnut',
            data: {
                labels: skillsLabels,
                datasets: [{
                    data: skillsValues,
                    backgroundColor: [
                        '#667eea',
                        '#764ba2',
                        '#f093fb',
                        '#4facfe',
                        '#43e97b',
                        '#fa709a'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Department Distribution Chart
        const deptData = @Html.Raw(Json.Serialize(Model.DepartmentDistribution ?? new Dictionary<string, int>()));
        const deptLabels = Object.keys(deptData);
        const deptValues = Object.values(deptData);

        const deptCtx = document.getElementById('departmentChart').getContext('2d');
        new Chart(deptCtx, {
            type: 'bar',
            data: {
                labels: deptLabels,
                datasets: [{
                    label: 'Employees',
                    data: deptValues,
                    backgroundColor: 'rgba(102, 126, 234, 0.8)',
                    borderColor: 'rgba(102, 126, 234, 1)',
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}
