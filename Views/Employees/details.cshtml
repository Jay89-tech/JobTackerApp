@model SkillsManagement.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
    var skills = ViewBag.Skills as List<SkillsManagement.Models.Skill>;
    var qualifications = ViewBag.Qualifications as List<SkillsManagement.Models.Qualification>;
    var trainings = ViewBag.Trainings as List<SkillsManagement.Models.Training>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/edetails.css" />
}

<div class="page-header mb-4">
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary mb-2">
            <i class="fas fa-arrow-left"></i> Back to Employees
        </a>
        <h2>Employee Profile</h2>
        <p class="text-muted">Comprehensive employee information and statistics</p>
    </div>
    <div class="header-actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="ResetPassword" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="fas fa-key"></i> Reset Password
        </a>
        <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" style="display: inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn @(Model.IsActive ? "btn-danger" : "btn-success")" onclick="return confirm('@(Model.IsActive ? "Deactivate" : "Activate") this employee?')">
                <i class="fas fa-@(Model.IsActive ? "ban" : "check")"></i> @(Model.IsActive ? "Deactivate" : "Activate")
            </button>
        </form>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
            <i class="fas fa-trash"></i> Delete
        </a>
    </div>
</div>

<!-- Employee Info Card -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card profile-card">
            <div class="card-body text-center">
                <div class="profile-avatar">
                    @Model.FullName.Substring(0, 1).ToUpper()
                </div>
                <h3 class="mt-3">@Model.FullName</h3>
                <p class="text-muted">@Model.Role</p>

                @if (Model.IsActive)
                {
                    <span class="badge bg-success mb-3">Active</span>
                }
                else
                {
                    <span class="badge bg-danger mb-3">Inactive</span>
                }

                @if (Model.IsAdmin)
                {
                    <span class="badge bg-primary mb-3">Administrator</span>
                }

                <hr>

                <div class="profile-info">
                    <div class="info-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <small>Email</small>
                            <p>@Model.Email</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <i class="fas fa-building"></i>
                        <div>
                            <small>Department</small>
                            <p>@Model.Department</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <i class="fas fa-phone"></i>
                        <div>
                            <small>Contact</small>
                            <p>@(Model.ContactNumber ?? "Not provided")</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <i class="fas fa-calendar"></i>
                        <div>
                            <small>Joined</small>
                            <p>@Model.CreatedDate.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <small>Last Login</small>
                            <p>@(Model.LastLogin?.ToString("MMM dd, yyyy") ?? "Never")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stat-box">
                    <div class="stat-icon">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@skills.Count</h3>
                        <p>Total Skills</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-box">
                    <div class="stat-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@qualifications.Count</h3>
                        <p>Qualifications</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-box">
                    <div class="stat-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@trainings.Count</h3>
                        <p>Trainings</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Skills Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-lightbulb"></i> Skills</h5>
            </div>
            <div class="card-body">
                @if (skills.Any())
                {
                    <div class="skills-grid">
                        @foreach (var skill in skills.OrderByDescending(s => s.ProficiencyLevel))
                        {
                            <div class="skill-item">
                                <div class="skill-header">
                                    <strong>@skill.SkillName</strong>
                                    <span class="badge @(skill.Category == "Technical" ? "bg-info" : "bg-success")">
                                        @skill.Category
                                    </span>
                                </div>
                                <div class="skill-proficiency">
                                    <div class="proficiency-bar">
                                        <div class="proficiency-fill" style="width: @(skill.ProficiencyLevel * 20)%"></div>
                                    </div>
                                    <span class="proficiency-level">Level @skill.ProficiencyLevel</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No skills registered yet</p>
                }
            </div>
        </div>

        <!-- Qualifications Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-graduation-cap"></i> Qualifications</h5>
            </div>
            <div class="card-body">
                @if (qualifications.Any())
                {
                    <div class="timeline">
                        @foreach (var qual in qualifications.OrderByDescending(q => q.CompletionDate))
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content">
                                    <h6>@qual.Title</h6>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-university"></i> @qual.Institution
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-calendar"></i> @qual.CompletionDate.ToString("MMMM yyyy")
                                    </p>
                                    @if (!string.IsNullOrWhiteSpace(qual.Description))
                                    {
                                        <p class="mb-0">@qual.Description</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No qualifications registered yet</p>
                }
            </div>
        </div>

        <!-- Trainings Section -->
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-book"></i> Training Programs</h5>
            </div>
            <div class="card-body">
                @if (trainings.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Training</th>
                                    <th>Provider</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var training in trainings.OrderByDescending(t => t.StartDate))
                                {
                                    <tr>
                                        <td>
                                            <strong>@training.TrainingName</strong>
                                            @if (training.IsSuggestedByHR)
                                            {
                                                <span class="badge bg-primary">HR Suggested</span>
                                            }
                                        </td>
                                        <td>@(training.Provider ?? "N/A")</td>
                                        <td>
                                            @if (training.Status == "Completed")
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else if (training.Status == "In Progress")
                                            {
                                                <span class="badge bg-info">In Progress</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Planned</span>
                                            }
                                        </td>
                                        <td>
                                            @if (training.StartDate.HasValue)
                                            {
                                                @training.StartDate.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not set</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No training programs yet</p>
                }
            </div>
        </div>
    </div>
</div>

