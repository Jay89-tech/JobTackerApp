@model List<AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auditlogs.css" />
}

<div class="page-header mb-4">
    <div>
        <h2>Audit Logs</h2>
        <p class="text-muted">Track all system activities and changes</p>
    </div>
    <div class="header-actions">
        <a asp-action="Statistics" class="btn btn-info">
            <i class="fas fa-chart-bar"></i> Statistics
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card filter-card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Action</label>
                    <select name="action" class="form-select">
                        <option value="">All Actions</option>
                        @foreach (var action in ViewBag.Actions as List<string>)
                        {
                            <option value="@action" selected="@(ViewBag.SelectedAction == action)">@action</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Module</label>
                    <select name="module" class="form-select">
                        <option value="">All Modules</option>
                        @foreach (var module in ViewBag.Modules as List<string>)
                        {
                            <option value="@module" selected="@(ViewBag.SelectedModule == module)">@module</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-history stat-icon"></i>
            <div>
                <h4>@Model.Count</h4>
                <p>Total Records</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-plus-circle stat-icon text-success"></i>
            <div>
                <h4>@Model.Count(l => l.Action == "Create")</h4>
                <p>Created</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-edit stat-icon text-info"></i>
            <div>
                <h4>@Model.Count(l => l.Action == "Update")</h4>
                <p>Updated</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-mini">
            <i class="fas fa-trash stat-icon text-danger"></i>
            <div>
                <h4>@Model.Count(l => l.Action == "Delete")</h4>
                <p>Deleted</p>
            </div>
        </div>
    </div>
</div>

<!-- Audit Logs Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover audit-table">
                    <thead>
                        <tr>
                            <th width="15%">Timestamp</th>
                            <th width="15%">User</th>
                            <th width="10%">Action</th>
                            <th width="12%">Module</th>
                            <th width="48%">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>
                                    <div class="timestamp-cell">
                                        <strong>@log.Timestamp.ToString("MMM dd, yyyy")</strong>
                                        <br />
                                        <small class="text-muted">@log.Timestamp.ToString("HH:mm:ss")</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar-mini">
                                            @(log.EmployeeName?.Substring(0, 1) ?? "?")
                                        </div>
                                        <span>@log.EmployeeName</span>
                                    </div>
                                </td>
                                <td>
                                    @switch (log.Action)
                                    {
                                        case "Create":
                                            <span class="badge bg-success">
                                                <i class="fas fa-plus"></i> Create
                                            </span>
                                            break;
                                        case "Update":
                                            <span class="badge bg-info">
                                                <i class="fas fa-edit"></i> Update
                                            </span>
                                            break;
                                        case "Delete":
                                            <span class="badge bg-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </span>
                                            break;
                                        case "Login":
                                            <span class="badge bg-primary">
                                                <i class="fas fa-sign-in-alt"></i> Login
                                            </span>
                                            break;
                                        case "Logout":
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-sign-out-alt"></i> Logout
                                            </span>
                                            break;
                                        case "Export":
                                            <span class="badge bg-warning">
                                                <i class="fas fa-download"></i> Export
                                            </span>
                                            break;
                                        case "Send":
                                        case "Broadcast":
                                            <span class="badge bg-purple">
                                                <i class="fas fa-paper-plane"></i> @log.Action
                                            </span>
                                            break;
                                        case "Suggest":
                                            <span class="badge bg-info">
                                                <i class="fas fa-lightbulb"></i> Suggest
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@log.Action</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <span class="module-badge">
                                        @switch (log.Module)
                                        {
                                            case "Employees":
                                                <i class="fas fa-users"></i>
                                                break;
                                            case "Skills":
                                                <i class="fas fa-lightbulb"></i>
                                                break;
                                            case "Qualifications":
                                                <i class="fas fa-graduation-cap"></i>
                                                break;
                                            case "Training":
                                                <i class="fas fa-book"></i>
                                                break;
                                            case "Notifications":
                                                <i class="fas fa-bell"></i>
                                                break;
                                            case "Reports":
                                                <i class="fas fa-chart-bar"></i>
                                                break;
                                            case "Authentication":
                                                <i class="fas fa-lock"></i>
                                                break;
                                            default:
                                                <i class="fas fa-cog"></i>
                                                break;
                                        }
                                        @log.Module
                                    </span>
                                </td>
                                <td>
                                    <div class="details-cell">
                                        @log.Details
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <p class="text-muted mb-0">
                    Showing @Model.Count audit log record@(Model.Count != 1 ? "s" : "")
                </p>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-history"></i>
                </div>
                <h4>No Audit Logs Found</h4>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(ViewBag.SelectedAction) || !string.IsNullOrEmpty(ViewBag.SelectedModule))
                    {
                        <span>No logs match your search criteria. Try adjusting your filters.</span>
                    }
                    else
                    {
                        <span>No audit logs have been recorded yet.</span>
                    }
                </p>
            </div>
        }
    </div>
</div>

<!-- Legend Card -->
@if (Model.Any())
{
    <div class="card mt-4">
        <div class="card-header">
            <h6><i class="fas fa-info-circle"></i> Action Types Legend</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <span class="badge bg-success me-2"><i class="fas fa-plus"></i> Create</span>
                    <small class="text-muted">New records added</small>
                </div>
                <div class="col-md-3 mb-2">
                    <span class="badge bg-info me-2"><i class="fas fa-edit"></i> Update</span>
                    <small class="text-muted">Records modified</small>
                </div>
                <div class="col-md-3 mb-2">
                    <span class="badge bg-danger me-2"><i class="fas fa-trash"></i> Delete</span>
                    <small class="text-muted">Records removed</small>
                </div>
                <div class="col-md-3 mb-2">
                    <span class="badge bg-primary me-2"><i class="fas fa-sign-in-alt"></i> Login</span>
                    <small class="text-muted">User authentication</small>
                </div>
            </div>
        </div>
    </div>
}