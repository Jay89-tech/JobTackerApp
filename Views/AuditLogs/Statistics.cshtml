@{
    ViewData["Title"] = "Audit Statistics";
}

@section Styles {
    <link rel="stylesheet" href="~/css/stats.css" />
}

<div class="page-header mb-4">
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary mb-2">
            <i class="fas fa-arrow-left"></i> Back to Audit Logs
        </a>
        <h2>Audit Log Statistics</h2>
        <p class="text-muted">System activity analytics and insights</p>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@ViewBag.TotalLogs</h3>
            <p>Total Activities</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@((Dictionary<string, int>)ViewBag.ActionDistribution).Values.Max()</h3>
            <p>Most Common Action</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@((Dictionary<string, int>)ViewBag.TopUsers).Count</h3>
            <p>Active Users</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@((Dictionary<string, int>)ViewBag.ModuleDistribution).Count</h3>
            <p>Active Modules</p>
        </div>
    </div>
</div>

<!-- Charts Row 1 -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card chart-card">
            <div class="card-header">
                <h5>Activity by Action Type</h5>
            </div>
            <div class="card-body">
                <canvas id="actionChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card chart-card">
            <div class="card-header">
                <h5>Activity by Module</h5>
            </div>
            <div class="card-body">
                <canvas id="moduleChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row 2 -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card chart-card">
            <div class="card-header">
                <h5>Daily Activity (Last 7 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="dailyChart"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card chart-card">
            <div class="card-header">
                <h5>Hourly Activity Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="hourlyChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Top Users Table -->
<div class="card">
    <div class="card-header">
        <h5><i class="fas fa-users"></i> Most Active Users</h5>
    </div>
    <div class="card-body">
        @if (ViewBag.TopUsers != null && ((Dictionary<string, int>)ViewBag.TopUsers).Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th>User Name</th>
                            <th class="text-center">Total Activities</th>
                            <th width="50%">Activity Level</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var rank = 0;
                            var topUsers = (Dictionary<string, int>)ViewBag.TopUsers;
                            var maxActivities = topUsers.Values.Max();
                        }
                        @foreach (var user in topUsers)
                        {
                            rank++;
                            var percentage = (user.Value * 100.0 / maxActivities);
                            <tr>
                                <td>
                                    <span class="rank-badge rank-@(rank <= 3 ? rank : 4)">@rank</span>
                                </td>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar-mini">
                                            @user.Key.Substring(0, 1)
                                        </div>
                                        <strong>@user.Key</strong>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="activity-count">@user.Value</span>
                                </td>
                                <td>
                                    <div class="activity-bar-container">
                                        <div class="activity-bar" style="width: @percentage%"></div>
                                        <span class="activity-percentage">@percentage.ToString("F0")%</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted text-center py-3">No user activity data available</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Action Distribution Chart
        const actionData = @Html.Raw(Json.Serialize(ViewBag.ActionDistribution ?? new Dictionary<string, int>()));
        const actionLabels = Object.keys(actionData);
        const actionValues = Object.values(actionData);

        const actionCtx = document.getElementById('actionChart').getContext('2d');
        new Chart(actionCtx, {
            type: 'doughnut',
            data: {
                labels: actionLabels,
                datasets: [{
                    data: actionValues,
                    backgroundColor: [
                        '#28a745', // Create - Green
                        '#17a2b8', // Update - Cyan
                        '#dc3545', // Delete - Red
                        '#667eea', // Login - Purple
                        '#6c757d', // Logout - Gray
                        '#ffc107'  // Export - Yellow
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Module Distribution Chart
        const moduleData = @Html.Raw(Json.Serialize(ViewBag.ModuleDistribution ?? new Dictionary<string, int>()));
        const moduleLabels = Object.keys(moduleData);
        const moduleValues = Object.values(moduleData);

        const moduleCtx = document.getElementById('moduleChart').getContext('2d');
        new Chart(moduleCtx, {
            type: 'bar',
            data: {
                labels: moduleLabels,
                datasets: [{
                    label: 'Activities',
                    data: moduleValues,
                    backgroundColor: 'rgba(102, 126, 234, 0.8)',
                    borderColor: 'rgba(102, 126, 234, 1)',
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Daily Activity Chart
        const dailyData = @Html.Raw(Json.Serialize(ViewBag.DailyActivity ?? new Dictionary<string, int>()));
        const dailyLabels = Object.keys(dailyData);
        const dailyValues = Object.values(dailyData);

        const dailyCtx = document.getElementById('dailyChart').getContext('2d');
        new Chart(dailyCtx, {
            type: 'line',
            data: {
                labels: dailyLabels,
                datasets: [{
                    label: 'Activities',
                    data: dailyValues,
                    borderColor: '#667eea',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    tension: 0.4,
                    fill: true,
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Hourly Activity Chart
        const hourlyData = @Html.Raw(Json.Serialize(ViewBag.HourlyActivity ?? new Dictionary<string, int>()));
        const hourlyLabels = Object.keys(hourlyData);
        const hourlyValues = Object.values(hourlyData);

        const hourlyCtx = document.getElementById('hourlyChart').getContext('2d');
        new Chart(hourlyCtx, {
            type: 'bar',
            data: {
                labels: hourlyLabels,
                datasets: [{
                    label: 'Activities',
                    data: hourlyValues,
                    backgroundColor: 'rgba(67, 233, 123, 0.8)',
                    borderColor: 'rgba(67, 233, 123, 1)',
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}