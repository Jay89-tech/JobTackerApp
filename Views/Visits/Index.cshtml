@model List<VisitorManagement.Models.Visit>
@{
    ViewData["Title"] = "All Visits";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1e293b;
    }

    .filter-section {
        background: white;
        padding: 1.5rem;
        border-radius: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-bottom: 2rem;
    }

    .filter-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .filter-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #64748b;
    }

    .filter-input, .filter-select {
        padding: 0.75rem;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .filter-input:focus, .filter-select:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .filter-buttons {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
    }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

    .btn-secondary:hover {
        background: #e2e8f0;
    }

    .visits-table {
        background: white;
        border-radius: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .table {
        width: 100%;
        margin: 0;
    }

    .table thead {
        background: #f8fafc;
    }

    .table th {
        padding: 1rem 1.5rem;
        font-weight: 600;
        color: #1e293b;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #e2e8f0;
    }

    .table td {
        padding: 1rem 1.5rem;
        color: #64748b;
        border-bottom: 1px solid #f1f5f9;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background: #f8fafc;
    }

    .visitor-cell {
        font-weight: 600;
        color: #1e293b;
    }

    .company-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: #f1f5f9;
        color: #64748b;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .status-badge {
        padding: 0.35rem 0.875rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        display: inline-block;
    }

    .status-badge.pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-badge.approved {
        background: #d1fae5;
        color: #065f46;
    }

    .status-badge.denied {
        background: #fee2e2;
        color: #991b1b;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-icon {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-view {
        background: #eff6ff;
        color: #3b82f6;
    }

    .btn-view:hover {
        background: #3b82f6;
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #94a3b8;
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    .empty-state h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #64748b;
    }
</style>

<div class="page-header">
    <h1 class="page-title">All Visits</h1>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" style="margin-bottom: 1.5rem;">
        <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="margin-bottom: 1.5rem;">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
    </div>
}

<div class="filter-section">
    <form asp-action="Search" method="get">
        <div class="filter-grid">
            <div class="filter-group">
                <label class="filter-label">Search</label>
                <input type="text" name="searchTerm" class="filter-input" placeholder="Search..." value="@ViewBag.SearchTerm" />
            </div>
            <div class="filter-group">
                <label class="filter-label">Search By</label>
                <select name="searchType" class="filter-select">
                    <option value="name" selected>Visitor Name</option>
                    <option value="email">Email</option>
                    <option value="company">Company</option>
                    <option value="host">Host Name</option>
                </select>
            </div>
            <div class="filter-group" style="justify-content: flex-end;">
                <label class="filter-label">&nbsp;</label>
                <div class="filter-buttons">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-redo"></i> Reset
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="visits-table">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Visitor</th>
                    <th>Company</th>
                    <th>Host</th>
                    <th>Visit Date</th>
                    <th>Time</th>
                    <th>Purpose</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr>
                        <td>
                            <div class="visitor-cell">@visit.VisitorName</div>
                            <div style="font-size: 0.8rem; color: #94a3b8; margin-top: 0.25rem;">
                                @visit.VisitorEmail
                            </div>
                        </td>
                        <td>
                            <span class="company-badge">@visit.VisitorCompany</span>
                        </td>
                        <td>
                            <div>@visit.HostName</div>
                            <div style="font-size: 0.8rem; color: #94a3b8; margin-top: 0.25rem;">
                                @visit.HostDepartment
                            </div>
                        </td>
                        <td>@visit.VisitDate.ToString("MMM dd, yyyy")</td>
                        <td>@visit.ExpectedArrivalTime.ToString("hh:mm tt")</td>
                        <td>@visit.PurposeOfVisit</td>
                        <td>
                            <span class="status-badge @visit.Status.ToLower()">@visit.Status</span>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a href="@Url.Action("Details", new { id = visit.Id })" class="btn-icon btn-view" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-calendar-times"></i>
            <h3>No Visits Found</h3>
            <p>There are no visits to display at the moment.</p>
        </div>
    }
</div>