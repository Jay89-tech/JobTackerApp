@using JobTrackerApp.Models
@model IEnumerable<JobTrackerApp.Models.Job>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Jobs</h1>
    @if (User.IsInRole("Recruiter") || User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Post New Job
        </a>
    }
</div>

<!-- Search and Filter Controls -->
<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <input name="searchTerm" value="@ViewBag.SearchTerm"
                   class="form-control me-2" placeholder="Search jobs...">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
    </div>
    <div class="col-md-3">
        <form asp-action="Index" method="get">
            <select name="status" class="form-select" onchange="this.form.submit()">
                <option value="">All Statuses</option>
                @foreach (var status in ViewBag.JobStatuses)
                {
                    <option value="@status.Value"
                            selected="@(ViewBag.Status == status.Value)">
                        @status.Text
                    </option>
                }
            </select>
        </form>
    </div>
</div>

<!-- Jobs Grid -->
<div class="row">
    @foreach (var job in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100" data-job-id="@job.Id">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title">@job.Title</h5>
                        <span class="badge bg-@(job.Status == JobStatus.Open ? "success" : "secondary") job-status">
                            @job.Status
                        </span>
                    </div>
                    <h6 class="card-subtitle mb-2 text-muted">@job.Company</h6>
                    <p class="card-text">
                        <small class="text-muted">
                            <i class="bi bi-geo-alt"></i> @job.Location
                            @if (job.IsRemote)
                            {
                                <span class="badge bg-info ms-1">Remote</span>
                            }
                        </small>
                    </p>

                    @if (job.Salary.HasValue)
                    {
                        <p class="text-success fw-bold">
                            $@job.Salary.Value.ToString("N0")
                        </p>
                    }

                    <p class="card-text">@job.Description.Substring(0, Math.Min(100, job.Description.Length))...</p>

                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted application-count">
                            @job.ApplicationCount Applications
                        </small>
                        <small class="text-muted job-updated">
                            @job.DatePosted.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group w-100">
                        <a asp-action="Details" asp-route-id="@job.Id"
                           class="btn btn-outline-primary">View Details</a>
                        @if (User.IsInRole("JobSeeker"))
                        {
                            <a asp-controller="Applications" asp-action="Create"
                               asp-route-jobId="@job.Id" class="btn btn-primary">Apply</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h3 class="text-muted">No jobs found</h3>
        <p>Try adjusting your search criteria or check back later.</p>
    </div>
}