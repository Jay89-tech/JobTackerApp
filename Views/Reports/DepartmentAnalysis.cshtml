@model List<SkillsManagement.Controllers.DepartmentAnalysis>
@{
    ViewData["Title"] = "Department Analysis Report";
}

@section Styles {
    <link rel="stylesheet" href="~/css/departana.css" />
}

<div class="report-header">
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary mb-2">
            <i class="fas fa-arrow-left"></i> Back to Reports
        </a>
        <h2>Department Analysis Report</h2>
        <p class="text-muted">Comparative department metrics - Generated @DateTime.Now.ToString("MMMM dd, yyyy HH:mm")</p>
    </div>
    <div class="export-actions">
        <a asp-action="ExportDepartmentAnalysisExcel" class="btn btn-success">
            <i class="fas fa-file-excel"></i> Export to Excel
        </a>
        <button onclick="window.print()" class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Export to PDF
        </button>
    </div>
</div>

<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-building fa-2x mb-3" style="color: #667eea;"></i>
            <h3>@Model.Count</h3>
            <p>Total Departments</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-users fa-2x mb-3" style="color: #28a745;"></i>
            <h3>@Model.Sum(d => d.TotalEmployees)</h3>
            <p>Total Employees</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-lightbulb fa-2x mb-3" style="color: #ffc107;"></i>
            <h3>@Model.Sum(d => d.TotalSkills)</h3>
            <p>Total Skills</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-graduation-cap fa-2x mb-3" style="color: #17a2b8;"></i>
            <h3>@Model.Sum(d => d.TotalQualifications)</h3>
            <p>Total Qualifications</p>
        </div>
    </div>
</div>

<!-- Department Comparison Table -->
<div class="card">
    <div class="card-header">
        <h5><i class="fas fa-table"></i> Department Comparison</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover dept-table">
                    <thead>
                        <tr>
                            <th>Department</th>
                            <th class="text-center">Employees</th>
                            <th class="text-center">Total Skills</th>
                            <th class="text-center">Unique Skills</th>
                            <th class="text-center">Avg Proficiency</th>
                            <th class="text-center">Qualifications</th>
                            <th class="text-center">Training</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model.OrderByDescending(d => d.TotalEmployees))
                        {
                            <tr>
                                <td>
                                    <div class="dept-name">
                                        <i class="fas fa-building text-primary me-2"></i>
                                        @dept.DepartmentName
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="stat-badge">
                                        @dept.TotalEmployees
                                        <small class="text-muted">(@dept.ActiveEmployees active)</small>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="stat-badge">@dept.TotalSkills</span>
                                </td>
                                <td class="text-center">
                                    <span class="stat-badge">@dept.UniqueSkills</span>
                                </td>
                                <td>
                                    <div class="proficiency-indicator">
                                        <div class="proficiency-bar">
                                            <div class="proficiency-fill" style="width: @(dept.AverageProficiency * 20)%"></div>
                                        </div>
                                        <span>@dept.AverageProficiency.ToString("F1")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="stat-badge">@dept.TotalQualifications</span>
                                </td>
                                <td class="text-center">
                                    <span class="stat-badge">
                                        @dept.CompletedTrainings
                                        <small class="text-muted">/ @(dept.CompletedTrainings + dept.PlannedTrainings)</small>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Department Rankings -->
            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="chart-section">
                        <h5><i class="fas fa-trophy text-warning"></i> Highest Skills per Employee</h5>
                        @{
                            var topSkillsDept = Model
                            .Where(d => d.TotalEmployees > 0)
                            .OrderByDescending(d => (double)d.TotalSkills / d.TotalEmployees)
                            .Take(5);
                        }
                        <ul class="list-group list-group-flush">
                            @foreach (var dept in topSkillsDept)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><strong>@dept.DepartmentName</strong></span>
                                    <span class="badge bg-primary rounded-pill">
                                        @((dept.TotalSkills / (double)dept.TotalEmployees).ToString("F1")) avg/employee
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="chart-section">
                        <h5><i class="fas fa-star text-success"></i> Highest Average Proficiency</h5>
                        @{
                            var topProficiencyDept = Model
                            .OrderByDescending(d => d.AverageProficiency)
                            .Take(5);
                        }
                        <ul class="list-group list-group-flush">
                            @foreach (var dept in topProficiencyDept)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><strong>@dept.DepartmentName</strong></span>
                                    <span class="badge bg-success rounded-pill">
                                        @dept.AverageProficiency.ToString("F1") / 5.0
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="chart-section">
                        <h5><i class="fas fa-graduation-cap text-info"></i> Most Qualifications</h5>
                        @{
                            var topQualsDept = Model
                            .OrderByDescending(d => d.TotalQualifications)
                            .Take(5);
                        }
                        <ul class="list-group list-group-flush">
                            @foreach (var dept in topQualsDept)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><strong>@dept.DepartmentName</strong></span>
                                    <span class="badge bg-info rounded-pill">
                                        @dept.TotalQualifications qualifications
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="chart-section">
                        <h5><i class="fas fa-book text-purple"></i> Most Active in Training</h5>
                        @{
                            var topTrainingDept = Model
                            .OrderByDescending(d => d.CompletedTrainings)
                            .Take(5);
                        }
                        <ul class="list-group list-group-flush">
                            @foreach (var dept in topTrainingDept)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><strong>@dept.DepartmentName</strong></span>
                                    <span class="badge bg-purple rounded-pill">
                                        @dept.CompletedTrainings completed
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Key Insights -->
            <div class="alert alert-info mt-4">
                <h5><i class="fas fa-lightbulb"></i> Key Insights</h5>
                <ul class="mb-0">
                    <li>
                        <strong>Largest Department:</strong>
                        @Model.OrderByDescending(d => d.TotalEmployees).First().DepartmentName
                        with @Model.OrderByDescending(d => d.TotalEmployees).First().TotalEmployees employees
                    </li>
                    <li>
                        <strong>Highest Skill Diversity:</strong>
                        @Model.OrderByDescending(d => d.UniqueSkills).First().DepartmentName
                        with @Model.OrderByDescending(d => d.UniqueSkills).First().UniqueSkills unique skills
                    </li>
                    <li>
                        <strong>Best Training Completion:</strong>
                        @Model.OrderByDescending(d => d.CompletedTrainings).First().DepartmentName
                        with @Model.OrderByDescending(d => d.CompletedTrainings).First().CompletedTrainings completed trainings
                    </li>
                    <li>
                        <strong>Average Skills per Employee:</strong>
                        @(Model.Sum(d => d.TotalSkills) / (double)Model.Sum(d => d.TotalEmployees)).ToString("F1") across all departments
                    </li>
                </ul>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-building fa-3x text-muted mb-3"></i>
                <p class="text-muted">No department data available.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Animate proficiency bars on load
        document.addEventListener('DOMContentLoaded', function() {
            const bars = document.querySelectorAll('.proficiency-fill');
            bars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        });

        // Print functionality
        window.addEventListener('beforeprint', function() {
            document.body.classList.add('printing');
        });

        window.addEventListener('afterprint', function() {
            document.body.classList.remove('printing');
        });
    </script>
}