@model List<SkillsManagement.Controllers.EmployeeSkillReport>
@{
    ViewData["Title"] = "Skills Audit Report";
}

@section Styles {
    <link rel="stylesheet" href="~/css/skillaudit.css" />
}

<div class="page-header mb-4">
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary mb-2">
            <i class="fas fa-arrow-left"></i> Back to Reports
        </a>
        <h2>Skills Audit Report</h2>
        <p class="text-muted">Comprehensive skills overview - Generated @DateTime.Now.ToString("MMMM dd, yyyy HH:mm")</p>
    </div>
    <div class="export-actions">
        <a asp-action="ExportSkillAuditExcel" class="btn btn-success">
            <i class="fas fa-file-excel"></i> Export to Excel
        </a>
        <button onclick="window.print()" class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Export to PDF
        </button>
    </div>
</div>

<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@Model.Count</h3>
            <p>Active Employees</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@Model.Sum(e => e.TotalSkills)</h3>
            <p>Total Skills</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@(Model.Any() ? Model.Average(e => e.AverageProficiency).ToString("F1") : "0")</h3>
            <p>Avg Proficiency</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <h3>@Model.Sum(e => e.CompletedTrainings)</h3>
            <p>Trainings Completed</p>
        </div>
    </div>
</div>

<!-- Employee Skills Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover audit-table">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Department</th>
                            <th class="text-center">Total Skills</th>
                            <th class="text-center">Technical</th>
                            <th class="text-center">Soft Skills</th>
                            <th class="text-center">Avg Proficiency</th>
                            <th class="text-center">Qualifications</th>
                            <th class="text-center">Trainings</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="employee-avatar-sm">
                                            @report.Employee.FullName.Substring(0, 1)
                                        </div>
                                        <strong>@report.Employee.FullName</strong>
                                    </div>
                                </td>
                                <td>@report.Employee.Department</td>
                                <td class="text-center">
                                    <span class="badge-count">@report.TotalSkills</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count technical">@report.TechnicalSkills</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count soft">@report.SoftSkills</span>
                                </td>
                                <td class="text-center">
                                    <div class="proficiency-badge proficiency-@(((int)report.AverageProficiency))">
                                        @report.AverageProficiency.ToString("F1")
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count">@report.Qualifications.Count</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count">@report.CompletedTrainings</span>
                                </td>
                                <td class="text-center">
                                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@report.Employee.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Skills Gap Analysis -->
            <div class="mt-5">
                <h5 class="mb-3"><i class="fas fa-exclamation-triangle text-warning"></i> Skills Gap Analysis</h5>
                <div class="row">
                    @{
                        var lowProficiency = Model.Where(e => e.AverageProficiency < 3 && e.TotalSkills > 0).Take(5);
                        var noSkills = Model.Where(e => e.TotalSkills == 0).Take(5);
                    }

                    <div class="col-md-6">
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-chart-line"></i> Low Average Proficiency</h6>
                            @if (lowProficiency.Any())
                            {
                                <ul class="mb-0">
                                    @foreach (var emp in lowProficiency)
                                    {
                                        <li>@emp.Employee.FullName - Avg: @emp.AverageProficiency.ToString("F1")</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="mb-0">No employees with low proficiency</p>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="alert alert-danger">
                            <h6><i class="fas fa-user-times"></i> No Skills Registered</h6>
                            @if (noSkills.Any())
                            {
                                <ul class="mb-0">
                                    @foreach (var emp in noSkills)
                                    {
                                        <li>@emp.Employee.FullName - @emp.Employee.Department</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="mb-0">All employees have skills registered</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                <p class="text-muted">No data available for skills audit report.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Print handler
        window.addEventListener('beforeprint', function() {
            document.body.classList.add('printing');
        });

        window.addEventListener('afterprint', function() {
            document.body.classList.remove('printing');
        });
    </script>
}