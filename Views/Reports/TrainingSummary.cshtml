@model List<SkillsManagement.Controllers.TrainingReport>
@{
    ViewData["Title"] = "Training Summary Report";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tsummary.css" />
}

<div class="report-header">
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary mb-2">
            <i class="fas fa-arrow-left"></i> Back to Reports
        </a>
        <h2>Training Summary Report</h2>
        <p class="text-muted">Comprehensive training analytics - Generated @DateTime.Now.ToString("MMMM dd, yyyy HH:mm")</p>
    </div>
    <div class="export-actions">
        <a asp-action="ExportTrainingSummaryExcel" class="btn btn-success">
            <i class="fas fa-file-excel"></i> Export to Excel
        </a>
        <button onclick="window.print()" class="btn btn-danger">
            <i class="fas fa-file-pdf"></i> Export to PDF
        </button>
    </div>
</div>

<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-book fa-2x mb-3" style="color: #667eea;"></i>
            <h3>@Model.Sum(e => e.TotalTrainings)</h3>
            <p>Total Trainings</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-check-circle fa-2x mb-3" style="color: #28a745;"></i>
            <h3>@Model.Sum(e => e.CompletedTrainings)</h3>
            <p>Completed</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-calendar fa-2x mb-3" style="color: #ffc107;"></i>
            <h3>@Model.Sum(e => e.PlannedTrainings)</h3>
            <p>Planned</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="summary-card">
            <i class="fas fa-percentage fa-2x mb-3" style="color: #17a2b8;"></i>
            <h3>@(Model.Any() && Model.Sum(e => e.TotalTrainings) > 0 ? ((Model.Sum(e => e.CompletedTrainings) * 100.0) / Model.Sum(e => e.TotalTrainings)).ToString("F1") : "0")%</h3>
            <p>Completion Rate</p>
        </div>
    </div>
</div>

<!-- Employee Training Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover training-table">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Department</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Completed</th>
                            <th class="text-center">In Progress</th>
                            <th class="text-center">Planned</th>
                            <th class="text-center">HR Suggested</th>
                            <th class="text-center">Completion Rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model.OrderByDescending(r => r.CompletionRate))
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="employee-avatar-sm">
                                            @report.Employee.FullName.Substring(0, 1)
                                        </div>
                                        <strong>@report.Employee.FullName</strong>
                                    </div>
                                </td>
                                <td>@report.Employee.Department</td>
                                <td class="text-center">
                                    <span class="badge-count">@report.TotalTrainings</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count completed">@report.CompletedTrainings</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count in-progress">@report.InProgressTrainings</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count planned">@report.PlannedTrainings</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge-count hr-suggested">@report.HRSuggested</span>
                                </td>
                                <td class="text-center">
                                    <div class="progress-wrapper">
                                        <div class="progress">
                                            <div class="progress-bar @(report.CompletionRate >= 75 ? "bg-success" : report.CompletionRate >= 50 ? "bg-info" : report.CompletionRate >= 25 ? "bg-warning" : "bg-danger")"
                                                 style="width: @report.CompletionRate%">
                                                @if (report.CompletionRate > 10)
                                                {
                                                    <span>@report.CompletionRate.ToString("F0")%</span>
                                                }
                                            </div>
                                        </div>
                                        <span class="progress-text">@report.CompletionRate.ToString("F0")%</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Performance Analysis -->
            <div class="analysis-section">
                <h5 class="mb-3"><i class="fas fa-chart-line"></i> Performance Analysis</h5>
                <div class="row">
                    <div class="col-md-4">
                        <div class="alert alert-success analysis-card success">
                            <h6><i class="fas fa-star"></i> Top Performers</h6>
                            @{
                                var topPerformers = Model.Where(r => r.CompletionRate >= 75 && r.TotalTrainings > 0)
                                .OrderByDescending(r => r.CompletionRate)
                                .Take(5);
                            }
                            @if (topPerformers.Any())
                            {
                                <ul>
                                    @foreach (var emp in topPerformers)
                                    {
                                        <li>
                                            <strong>@emp.Employee.FullName</strong> - @emp.CompletionRate.ToString("F0")%
                                            <br />
                                            <small class="text-muted">@emp.CompletedTrainings of @emp.TotalTrainings completed</small>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="mb-0">No top performers yet. Keep encouraging training completion!</p>
                            }
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="alert alert-warning analysis-card warning">
                            <h6><i class="fas fa-exclamation-triangle"></i> Needs Attention</h6>
                            @{
                                var needsAttention = Model.Where(r => r.CompletionRate < 50 && r.TotalTrainings > 0)
                                .OrderBy(r => r.CompletionRate)
                                .Take(5);
                            }
                            @if (needsAttention.Any())
                            {
                                <ul>
                                    @foreach (var emp in needsAttention)
                                    {
                                        <li>
                                            <strong>@emp.Employee.FullName</strong> - @emp.CompletionRate.ToString("F0")%
                                            <br />
                                            <small class="text-muted">@emp.CompletedTrainings of @emp.TotalTrainings completed</small>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="mb-0">All employees performing well! Everyone has 50%+ completion rate.</p>
                            }
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="alert alert-info analysis-card info">
                            <h6><i class="fas fa-lightbulb"></i> Most HR Engaged</h6>
                            @{
                                var hrEngaged = Model.Where(r => r.HRSuggested > 0)
                                .OrderByDescending(r => r.HRSuggested)
                                .Take(5);
                            }
                            @if (hrEngaged.Any())
                            {
                                <ul>
                                    @foreach (var emp in hrEngaged)
                                    {
                                        <li>
                                            <strong>@emp.Employee.FullName</strong> - @emp.HRSuggested training@(emp.HRSuggested != 1 ? "s" : "")
                                            <br />
                                            <small class="text-muted">@emp.Employee.Department</small>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="mb-0">No HR suggestions yet. Consider suggesting training programs to employees.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="chart-section">
                        <h5><i class="fas fa-info-circle"></i> Key Insights</h5>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-primary">@Model.Count(r => r.TotalTrainings > 0)</h3>
                                    <p class="text-muted mb-0">Employees with Training</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-success">@Model.Count(r => r.CompletionRate == 100)</h3>
                                    <p class="text-muted mb-0">100% Completion</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-info">@(Model.Any() ? Model.Average(r => r.TotalTrainings).ToString("F1") : "0")</h3>
                                    <p class="text-muted mb-0">Avg Trainings/Employee</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-warning">@Model.Sum(r => r.InProgressTrainings)</h3>
                                    <p class="text-muted mb-0">Currently In Progress</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-book fa-3x text-muted mb-3"></i>
                <p class="text-muted">No training data available.</p>
                <a asp-controller="Training" asp-action="Suggestions" class="btn btn-primary">
                    <i class="fas fa-lightbulb"></i> Suggest First Training
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Add animation to progress bars on page load
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        });

        // Print functionality
        window.addEventListener('beforeprint', function() {
            document.body.classList.add('printing');
        });

        window.addEventListener('afterprint', function() {
            document.body.classList.remove('printing');
        });
    </script>
}